/* pages/post-detail/post-detail.wxss */

.post-detail-container{
	display: flex;
	flex-direction: column;
}

.headerImage {
	width: 100%;
	height: 460rpx;
}

.music-play {
	width: 102rpx;
	height: 110rpx;
	position: absolute;
	left: 50%;
	margin-left: -51rpx;
	top: 180rpx;
	opacity: 0.6;
}
.userInfo {
	flex-direction: row;
	margin-top: 30rpx;
	margin-left: 20rpx;
}
.userInfo image {
	width: 64rpx;
	height: 64rpx;
	vertical-align: middle;
}

.userName {
	font-size: 30rpx;
	font-weight: 300;
	margin-left: 20rpx;
	vertical-align: middle;
	color: #666;
}
.userPusblish {
	font-size: 24rpx;
	color: #999;
	margin-left: 20rpx;

}
.userTime {
 font-size: 24rpx;
 margin-left: 30rpx;
 vertical-align: middle;
 color: #999;
}

.title {
	margin-left: 40rpx;
	font-size: 36rpx;
	font-weight: 700;
	margin-top: 30rpx;
	letter-spacing: 2px;
	color: #4b556c
}

.toolView {
	margin-top: 20rpx;
	height: 90rpx;
}

.circleItem {
	float: right;
 margin-right: 40rpx;
 vertical-align: middle;
 justify-content: center;
}

.circleItem image {
	width: 90rpx;
	height: 90rpx;
}
.shareImage {
	margin-left: 30rpx;
}
.horizonLine {
	width: 660rpx;
	height: 2rpx;
	background-color: #e5e5e5;
	vertical-align: middle;
	position: relative;
	top: 46rpx;
	margin: 0 auto;
	z-index: -99;
}
.content {
	color: #666;
	margin-left: 30rpx;
	margin-top: 20rpx;
	margin-right: 30rpx;
	line-height: 44rpx;
	letter-spacing: 2px;
	font-size: 24rpx;
}